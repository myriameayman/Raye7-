				</div> <!-- closing input-group -->   
<br>

				<div class="input-group">
  					<span class="input-group-addon" id="car_number_span">@</span>
  					<input type="text" class="form-control" placeholder="car_number" id="car_number" name="car_number" style="height:50px">
				</div> <!-- closing input-group -->   
<br>

				<div class="input-group">
  					<span class="input-group-addon" id="seats_span">@</span>
  					<input type="text" class="form-control" placeholder="seats" id="seats" name="seats" style="height:50px">
				</div> <!-- closing input-group -->   
<br>

				<input name="smoking" type="radio" value="smoking"/>    
				<div class="label"> 
					<%= label :smoking_label, 'one can smoke in my car', :value => 'one can smoke in my car' %>
				</div> <!-- closing label -->
<br>
				<input name="air_conditioner" type="radio" value="air_conditioner"/>    
				<div class="label"> 
					<%= label :air_conditioner, 'i have air air_conditioner in my car', :value => 'i have air air_conditioner in my car' %>
				</div> <!-- closing label -->
<br>
				<input name="trunk" type="radio" value="trunk"/>    
				<div class="label"> 
					<%= label :trunk, 'i have a trunk in a truk', :value => 'i have a trunk in my car' %>
				</div> <!-- closing label -->
<br>
				<input name="girls-only" type="radio" value="girls-only"/>    
				<div class="label"> 
					<%= label :girlsOnly, 'only girls can join this trip', :value => 'only girls can join this trip' %>
				</div> <!-- closing label -->
<br>
				<input name="gentlemen-only" type="radio" value="gentlemen-only"/>    
				<div class="label"> 
					<%= label :gentlemenOnly, 'only gentlemen can join this trip', :value => 'only gentlemen can join this trip' %>
				</div> <!-- closing label -->
<br>
<br>
<script>
// Function to be called on click on the submit button. 
function create_ride_info() {
	var txt_color = document.getElementsByName('car_color')[0].value;
	var txt_model = document.getElementsByName('car_model')[0].value;
	var txt_number = document.getElementsByName('car_number')[0].value;
	var txt_seats = document.getElementsByName('seats')[0].value;
	var txt_name = document.getElementsByName('trip_name')[0].value;
	var txt_smoking;
	var txt_air_conditioner;
	var txt_trunk;
	var girls; 
	var gentlemen; 
	if (document.getElementsByName('smoking')[0].checked) 
  		txt_smoking = 1;
	else 
		txt_smoking = 0;
	if (document.getElementsByName('air_conditioner')[0].checked) 
  		txt_air_conditioner = 1;
	else 
		txt_air_conditioner = 0;
	if (document.getElementsByName('trunk')[0].checked) 
  		txt_trunk = 1;
	else 
		txt_trunk = 0;
	if (document.getElementsByName('girls-only')[0].checked) 
  		girls = 1;
	else 
		girls = 0;
	if (document.getElementsByName('gentlemen-only')[0].checked) 
  		gentlemen = 1;
	else 
		gentlemen = 0;
	// Redirected to create_ride_info in request controller. 
	window.location.replace('/requests/create_ride_info?car_color='+txt_color+'&car_model='+txt_model+'&car_number='+txt_number+'&seats='+txt_seats+'&smoking='+txt_smoking+'&air_conditioner='+txt_air_conditioner+'&trunk='+txt_trunk
		+'&name='+txt_name+'&girls='+girls+'&gentlemen='+gentlemen);

}
</script>
<br>
<a class="submit_button" href='#' onClick="create_ride_info();">
 Submit
 </a>
